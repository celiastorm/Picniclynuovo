<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".GuidaActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_guida"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="massivedynamics.applicazione.GuidaActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MENU PREFERITI O VISITATI"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:id="@+id/textView" />

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_delete_black_36dp"
                        android:tint="#194d19"
                        android:id="@+id/imageView"
                        android:layout_below="@+id/textView"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_alignBottom="@+id/imageView"
                        android:layout_toEndOf="@+id/imageView"
                        android:layout_marginStart="10dp"
                        android:id="@+id/textView9"
                        android:gravity="left|center"
                        android:text="DELETE: cancella il punto di interesse dalla lista"/>

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_place_black_36dp"
                        android:tint="#194d19"
                        android:id="@+id/imageView2"
                        android:layout_below="@+id/imageView"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="21dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_alignBottom="@+id/imageView2"
                        android:layout_toEndOf="@+id/imageView2"
                        android:layout_marginStart="10dp"
                        android:id="@+id/textView12"
                        android:gravity="left|center"
                        android:text="PLACE: ti rimanda al punto di interesse scelto" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#393939"
                        android:layout_marginTop="19dp"
                        android:id="@+id/imageView4"
                        android:layout_below="@+id/imageView2"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PUNTO DI INTERESSE"
                        android:paddingTop="5dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:id="@+id/textView14"
                        android:layout_below="@+id/imageView4"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="11dp" />

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:id="@+id/imageView5"
                        android:src="@drawable/ic_visitati"
                        android:tint="#194d19"
                        android:layout_below="@+id/textView14"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:text="VISITATI: segna il punto di interesse come visitato. Verrà aggiunto alla lista corrispondente"
                        android:gravity="left|center"
                        android:layout_alignTop="@+id/imageView5"
                        android:layout_alignStart="@+id/textView12"
                        android:id="@+id/textView13" />

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_preferiti"
                        android:tint="#194d19"
                        android:layout_below="@+id/imageView5"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="31dp"
                        android:id="@+id/imageView6" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:text="PREFERITI: segna il punto di interesse come preferito. Verrà aggiunto alla lista corrispondente"
                        android:gravity="left|center"
                        android:id="@+id/textView15"
                        android:layout_alignTop="@+id/imageView6"
                        android:layout_alignStart="@+id/textView13" />

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_menu_share"
                        android:tint="#194d19"
                        android:layout_below="@+id/imageView6"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="31dp"
                        android:id="@+id/imageView7" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:text="CONDIVIDI: puoi sempre condividere i punti di interesse che visiti in qualsiasi momento ovunque tu voglia"
                        android:layout_alignTop="@+id/imageView7"
                        android:layout_alignStart="@+id/textView15"
                        android:gravity="left|center"
                        android:id="@+id/textView16" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>





</android.support.design.widget.CoordinatorLayout>
